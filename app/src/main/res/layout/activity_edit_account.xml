<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gfo.gfo_meesterproef.Admin.ViewAccount.EditAccount.EditAccountActivity"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Old:"
                    style="@style/Header" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iconUsername"
                        android:src="@drawable/ic_person_black_24dp"
                        android:layout_alignBottom="@+id/textViewName" />
                    <TextView
                        android:id="@+id/textViewName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       style="@style/SubHeader"
                        tools:text="Username"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/iconUsername" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iconPassword"
                        android:src="@drawable/ic_lock_outline_black_24dp"
                        android:layout_alignBottom="@+id/textViewPass" />
                    <TextView
                        android:id="@+id/textViewPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       style="@style/SubHeader"
                        tools:text="Password"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/iconPassword"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iconEmail"
                        android:src="@drawable/ic_mail_outline_black_24dp"
                        android:layout_alignBottom="@+id/textViewEmail" />
                    <TextView
                        android:id="@+id/textViewEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/SubHeader"
                        tools:text="Email"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/iconEmail"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New:"
                    style="@style/Header"/>

                <EditText
                    android:id="@+id/usernameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    style="@style/EditText"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    style="@style/EditText"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    style="@style/EditText"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

        </LinearLayout>



    <Button
        android:id="@+id/button2"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="editAccount"
        android:text="EDIT ACCOUNT"
        android:layout_marginTop="20dp" />

</LinearLayout>

